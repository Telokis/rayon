{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch CLI",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.sw/out/debug/rayon.cli-0.0.1.exe",
      "args": [
        "-w",
        "1024",
        "-j",
        "1",
        "-h",
        "1024",
        "-o",
        "${workspaceFolder}/out.png",
        "${workspaceFolder}/files/scenes/sunset.yon"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "internalConsole",
      "preLaunchTask": "[CLI] Debug build with sw"
    },
    {
      "name": "(Windows) Launch GUI",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.sw/out/debug/rayon.gui-0.0.1.exe",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "internalConsole",
      "preLaunchTask": "Debug build with sw"
    }
  ]
}
